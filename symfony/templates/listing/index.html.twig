{% extends 'base.html.twig' %}

{% block title %}{{ 'trans.My listings' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 col-lg-3 mb-5">
                {% include 'listing/user_navigation_card.html.twig' %}
            </div>

            <div class="col-md-8 col-lg-9">
                <form method="get">
                    <input name="query" value="{{ app.request.get('query') }}" type="text" placeholder="{{ 'trans.keyword' | trans }}" />
                    <button type="submit">{{ 'trans.Search' | trans }}</button>
                </form>

                <table class="table">
                    <thead>
                    <tr>
                        <th>{{ 'trans.Title' | trans }}</th>
                        <th>{{ 'trans.Last edit' | trans }}</th>
                        <th>{{ 'trans.Status' | trans }}</th>
                        <th>{{ 'trans.Actions' | trans }}</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for listing in listings %}
                        <tr>
                            <td>
                                <div>
                                    <a href="{{ path('app_listing_show', {"id": listing.id}) }}">{{ listing.title }}</a>
                                </div>
                                {% if listing.adminConfirmed %}
                                    <div>
                                        <a href="{{ path('app_user_feature_listing', {"id": listing.id}) }}">{{ 'trans.Feature this listing' | trans }}</a>
                                    </div>
                                {% endif %}
                                {% if listing.adminRejected %}
                                    {% if listing.rejectionReason is empty %}
                                        <div>
                                            {{ 'trans.Listing has been rejected' | trans }}
                                        </div>
                                    {% else %}
                                        <div>
                                            {{ 'trans.Listing has been rejected, reason' | trans }}: {{ listing.rejectionReason }}
                                        </div>
                                    {% endif %}
                                {% endif %}
                            </td>
                            <td>
                                {{ listing.lastEditDate | date('d.m.Y') }}
                            </td>
                            <td>
                                {{ getListingStatus(listing) }}
                            </td>
                            <td>
                                {% if not listing.adminRemoved %}
                                    <a href="{{ path('app_listing_edit', {'id': listing.id}) }}" class="btn btn-dark">{{ 'trans.Edit' | trans }}</a>

                                    {% if listing.adminConfirmed and not listing.adminRejected and (not listing.userDeactivated or listing.status == constant('\App\\Entity\\Listing::STATUS_EXPIRED')) %}
                                        <a
                                            href="{{ path('app_user_validity_extend', {'id': listing.id}) }}"
                                            class="btn btn-outline-success"
                                        >
                                            {{ 'trans.Extend' | trans }}
                                        </a>
                                    {% endif %}

                                    {% if not listing.adminRejected and not listing.status == constant('\App\\Entity\\Listing::STATUS_EXPIRED') %}
                                        {% if listing.userDeactivated %}
                                            {{ include('listing/_activate_form.html.twig') }}
                                        {% else %}
                                            {{ include('listing/_deactivate_form.html.twig') }}
                                        {% endif %}
                                    {% endif %}

                                {% endif %}

                                {{ include('listing/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">{{ 'trans.no records found' | trans }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

                {% if pager.getNbPages > 1 %}
                    {{ pagination | raw }}
                {% endif %}

                <div class="float-right">
                    <a href="{{ path('app_listing_new') }}" class="btn btn-primary">{{ 'trans.Create new listing' | trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
