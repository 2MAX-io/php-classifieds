{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Execute action on filtered listings' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>{{ 'trans.Execute action on filtered listings' | trans }}</h1>

        <div class="alert alert-warning">
            <h3 class="text-danger">{{ 'trans.IMPORTANT!' | trans }}</h3>

            <div>{{ 'trans.It is recommended that before running this action, to create restolable backup of database' | trans }}</div>
            <div>{{ 'trans.Also it is recommended to run this action on test environment, that is copy of live service, before running it on live service' | trans }}</div>
            <div>{{ 'trans.There is no way of undoing changes made by this action, except of restoring backup' | trans }}</div>
            <div>{{ 'trans.Make sure you execute action on correctly filtered listings' | trans }}</div>
        </div>

        <div class="alert alert-danger">
            {{ 'trans.Numer of listings changed by this action would be:' | trans }}
            {{ affectedCount | thousandsSeparate }}

            {% if affectedPercentage > 1 %}
                ({{ affectedPercentage | round }}% {{ 'trans.of all' | trans }})
            {% endif %}

            {% if affectedPercentage > 80 %}
                <h1 class="text-danger">{{ 'trans.This action will be executed on %percentage%% of listings (almost every listing), are you REALY sure you want to execute it?' | trans({'%percentage%': affectedPercentage}) }}</h1>
            {% endif %}
        </div>

        <div>
            {{ form_start(form) }}
            {{ form_widget(form) }}

            <button
                    onclick="return confirm('{{ 'trans.Execute action on %number% of listings?' | trans({'%number%': affectedCount | thousandsSeparate}) }}');"
                    class="btn btn-danger"
            >
                {{ 'trans.Execute action on filtered listings' | trans }}
            </button>
            <span class="badge badge-warning align-middle">
                {{ 'trans.changes:' | trans }}
                {{ affectedCount | thousandsSeparate }}

                {% if affectedPercentage > 1 %}
                    ({{ affectedPercentage | round }}% {{ 'trans.of all' | trans }})
                {% endif %}
            </span>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        let showActionFields = function () {
            let $select = $('.selectActonInput');
            let action = $select.val();

            let $actionField = $('.actionField');
            $actionField.hide();
            $actionField.filter('[data-for-action="'+action+'"]').show();
        };

        $('.selectActonInput').on('change', function () {
            showActionFields();
        });

        showActionFields();
    </script>
{% endblock js %}
