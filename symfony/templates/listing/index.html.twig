{% extends 'base.html.twig' %}

{% block title %}Listing index{% endblock %}

{% block body %}
    <h1>Listing index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Phone</th>
                <th>Email</th>
                <th>City</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for listing in listings %}
            <tr>
                <td>{{ listing.id }}</td>
                <td>{{ listing.title }}</td>
                <td>{{ listing.description }}</td>
                <td>{{ listing.price }}</td>
                <td>{{ listing.phone }}</td>
                <td>{{ listing.email }}</td>
                <td>{{ listing.city }}</td>
                <td>
                    <a href="{{ path('listing_edit', {'id': listing.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_listing_new') }}">Create new</a>
{% endblock %}
