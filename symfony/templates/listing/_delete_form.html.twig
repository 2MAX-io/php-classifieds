<form method="post" action="{{ path('app_listing_remove', {'id': listing.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('remove' ~ listing.id) }}">
    <button class="btn btn-danger btn-mini">{{ 'trans.Delete' | trans }}</button>
</form>
