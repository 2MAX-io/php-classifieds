{% extends 'admin/base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 col-lg-3 mb-5">
            </div>

            <div class="col-md-8 col-lg-9">
                <h2 class="mb-5">
                    {{ 'trans.Reject listing' | trans }}:
                    <a href="{{ path('app_listing_show', {'id': listing.id}) }}" target="_blank">{{ listing.title }}</a>
                </h2>

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <button class="btn btn-primary">{{ button_label|default('trans.Reject' | trans) }}</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
