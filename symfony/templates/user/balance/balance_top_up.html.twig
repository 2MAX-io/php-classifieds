{% extends 'base.html.twig' %}

{% block title %}{{ 'trans.Balance top up' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 col-lg-3 mb-5">
                {% include 'user/listing/user_navigation_card.html.twig' %}
            </div>

            <div class="col-md-8 col-lg-9">
                <h3 class="mb-3">
                    {{ 'trans.Balance top up' | trans }}
                </h3>

                {% include 'form/_flash_above_form.html.twig' %}

                <div class="my-4">
                    {{ 'trans.Your balance is' | trans }}:
                    <strong class="badge badge-success">{{ userBalance | moneyAsFloat }}</strong>
                    {{ 'trans.that you can use to feature listing' | trans }}
                </div>

                {{ form_start(form) }}
                {{ form_widget(form) }}

                <div class="alert alert-info">
                    {{ 'trans.Funds do not expire. However, they are not subject to withdrawal. And they do not pay interest of any kind.' | trans }}
                </div>

                <button class="btn btn-primary">{{ 'trans.Top up account' | trans }}</button>
                {{ form_end(form) }}

            </div>
        </div>
    </div>
{% endblock %}


{% block js %}
    <script type="text/javascript">
        new Cleave('.input-money', {
            numeral: true,
            numeralThousandsGroupStyle: 'thousand',
            numeralPositiveOnly: true,
            delimiter: ' ',
            numeralDecimalMark: ','
        });
    </script>
{% endblock %}
