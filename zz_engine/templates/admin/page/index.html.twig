{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Pages' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h1>{{ 'trans.Pages' | trans }}</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>{{ 'trans.Title' | trans }}</th>
                    <th>{{ 'trans.Enabled' | trans }}</th>
                    <th class="text-right">
                        <a href="{{ path('app_admin_page_new') }}" class="btn btn-primary">
                            {{- 'trans.Create new' | trans -}}
                        </a>
                    </th>
                </tr>
            </thead>
            <tbody>
            {% for page in pages %}
                <tr>
                    <td>
                        <a href="{{ path('app_page', {'slug': page.slug}) }}" class="text-break">
                            {{- page.title -}}
                        </a>
                    </td>
                    <td>
                        <span class="{{ page.enabled | boolGreenRedClass }}">
                            {{- page.enabled | boolText | trans -}}
                        </span>
                    </td>
                    <td class="text-right">
                        <a href="{{ path('app_admin_page_edit', {'id': page.id}) }}" class="btn btn-primary">
                            {{- 'trans.edit' | trans -}}
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="99">{{ 'trans.no records found' | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
