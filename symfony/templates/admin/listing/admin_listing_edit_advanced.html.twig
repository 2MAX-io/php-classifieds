{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Advanced listing edit' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <a href="{{ path('app_admin_listing_edit', {'id': listing.id}) }}">
            {{- 'trans.Edit listing' | trans -}}
        </a>

        <a href="{{ path('app_admin_police_log', {'id': listing.id}) }}" target="_blank" class="btn btn-info">{{ 'trans.Police log' | trans }}</a>

        {{ include('admin/listing/_raise_form.html.twig') }}
        {{ include('admin/listing/_delete_form.html.twig') }}

        {{ form_start(form) }}
        {{ form_widget(form) }}

        <button class="btn btn-primary">{{ button_label|default('trans.Save' | trans) }}</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
