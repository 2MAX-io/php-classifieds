<form method="post" action="{{ path('app_listing_activate', {'id': listing.id}) }}" onsubmit="return confirm('Are you sure you want to activate this item?');" class="d-inline">
    <input type="hidden" name="_method" value="PATCH">
    <input type="hidden" name="_token" value="{{ csrf_token('activate' ~ listing.id) }}">
    <button class="btn btn-warning btn-mini">{{ 'trans.Activate' | trans }}</button>
</form>
