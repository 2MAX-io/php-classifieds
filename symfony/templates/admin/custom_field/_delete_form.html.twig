<form
        method="post"
        action="{{ path('app_admin_custom_field_delete', {'id': custom_field.id}) }}"
        onsubmit="return confirm('Are you sure you want to delete this item?');"
        class="d-inline"
>
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ custom_field.id) }}">
    <button class="btn btn-danger">{{ 'trans.Delete' | trans }}</button>
</form>
