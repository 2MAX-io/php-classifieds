{% extends 'email/email_base.html.twig' %}

{# @var user \App\Entity\User #}

{% block content %}
<p>
    {{- 'trans.If you did not requested password change for account:' | trans -}}
</p>

<pre>{{- user.username -}}</pre>

<p>
    {{ 'trans.ignore this email, and do NOT click link bellow' | trans }}.
    {{ 'trans.If you have requested password change, click confirmation link bellow' | trans }}
</p>

<a href="{{ url('app_user_change_password_confirm', {'token': token}) }}" class="btn-success">
    {{- 'trans.I confirm password change' | trans -}}
</a>

<p>
    {{- 'trans.If the link above does not work, try to copy the link below to your browser' | trans -}}:
</p>

<pre>{{- url('app_user_change_password_confirm', {'token': token}) -}}</pre>
{% endblock content %}
