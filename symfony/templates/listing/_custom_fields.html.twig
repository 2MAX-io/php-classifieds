<script type="text/javascript">
    $(document).ready(function() {
        var loadCustomFields = function() {
            var categoryId = parseInt($('.formCategory').val());
            $.get('{{ path('app_listing_get_custom_fields', {"listingId": listing.id}) }}&categoryId=' + categoryId, function (data) {
                $('.formCustomFieldsLoaded').remove();
                $(data).insertAfter('.formCustomFieldsHidden');
            });
        };

        loadCustomFields();

        $('.formCategory').on('change', function () {
            loadCustomFields();
        });
    });
</script>
