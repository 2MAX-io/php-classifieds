{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Featured packages' | trans }}{% endblock %}

{% block body %}
<div class="mt-3">
    <div class="row no-gutters mb-2">
        <div class="col-md-6">
            <h1>{{ 'trans.Featured packages' | trans }}</h1>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="{{ path('app_admin_featured_package_new') }}" class="btn btn-primary">{{ 'trans.Create new' | trans }}</a>
        </div>
    </div>

    <table class="table table-responsive-sm">
        <thead>
            <tr>
                <th>{{ 'trans.Name for admin' | trans }}</th>
                <th>{{ 'trans.Name' | trans }}</th>
                <th>{{ 'trans.Price' | trans }}</th>
                <th>{{ 'trans.Days of featured' | trans }}</th>
                <th>{{ 'trans.Days of expiration' | trans }}</th>
                <th>{{ 'trans.Default?' | trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for featured_package in featured_packages %}
            <tr>
                <td>{{ featured_package.adminName }}</td>
                <td>{{ featured_package.name }}</td>
                <td>{{ featured_package.price | moneyPrecise }}</td>
                <td>{{ featured_package.daysFeaturedExpire }}</td>
                <td>{{ featured_package.daysListingExpire }}</td>
                <td>
                    <span class="{{ featured_package.defaultPackage | boolGreenRedClass }}">
                        {{ featured_package.defaultPackage | boolText | trans }}
                    </span>
                </td>
                <td>
                    <a href="{{ path('app_admin_featured_package_edit', {'id': featured_package.id}) }}" class="btn btn-dark">{{ 'trans.edit' | trans }}</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
