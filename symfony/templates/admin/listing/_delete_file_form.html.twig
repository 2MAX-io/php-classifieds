<form method="post" action="{{ path('app_admin_listing_file_remove', {'id': listingFile.id}) }}" onsubmit="return confirm('Are you sure you want to remove file of: {{ listing.title }}?');" class="d-inline">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('adminRemoveFile' ~ listingFile.id) }}">
    <button class="btn btn-danger btn-mini">{{ 'trans.Delete' | trans }}</button>
</form>
