{% extends 'admin/base.html.twig' %}

{% import "admin/_macro/_admin_macro.html.twig" as adminMacro %}

{% block title %}{{ 'trans.Edit listing' | trans }}{% endblock %}

{% block body %}
    <div class="container mt-3">
        <h3>{{ 'trans.Edit listing' | trans }}:
            <a target="_blank" href="{{ path('app_listing_show', {'id': listing.id, 'slug': listing.slug}) }}" class="text-break">
                {{- listing.title -}}
            </a>
        </h3>

        <a href="{{ path('app_admin_listing_edit_advanced', {'id': listing.id}) }}">
            {{- 'trans.Edit listing advanced settings' | trans -}}
        </a>

        <div class="float-right">
            <span class="{{ getListingStatusClass(listing) }}">{{ getListingStatus(listing) }}</span>

            {%- if adminShowActivate(listing) -%}
                {{ include('admin/listing/_action/_admin_activate_form.html.twig') }}
            {%- endif -%}

            {% if adminShowReject(listing) %}
                <a
                href="{{ path('app_admin_listing_reject', {'id': listing.id}) }}"
                target="_blank"
                class="btn btn-warning mb-1"
                >
                    {{ 'trans.Reject' | trans }}
                </a>
            {% endif %}
        </div>

        {{ form_start(form) }}
        {{ form_widget(form) }}

        {% if settings.mapEnabled %}
            <div class="form-group">
                <div>
                    {{ 'trans.Location on the map' | trans }}:
                    {% if listing.hasLocationOnMap %}
                        {{ 'trans.Latitude' | trans }}: {{ listing.locationLatitude }}
                        {{- ', ' -}}
                        {{ 'trans.Longitude' | trans }}: {{ listing.locationLongitude }}
                    {% else %}
                        {{ 'trans.Not set' | trans }}
                    {% endif %}
                    <div class="btn btn-outline-secondary btn-sm cursor-pointer js__add-location-to-the-map-button">
                        {{ 'trans.Edit location to the map' | trans }}
                    </div>
                </div>

                <div class="listing-edit-location-map d-none-soft js__listing-edit-location-map"></div>

                {{ form_row(form.locationLatitude) }}
                {{ form_row(form.locationLongitude) }}
            </div>
        {% endif %}

        <button class="btn btn-primary mb-4">{{ button_label|default('trans.Save' | trans) }}</button>
        {{ form_end(form) }}

        <div class="row mb-2">
            {{ adminMacro.listingInfo(listing) }}
        </div>

        <div class="my-4">
            {% for listingFile in listing.listingFiles %}
                <div class="d-inline-block mr-4">
                    <div class="mb-2">
                        <img
                                class="img-cover-center admin-image-delete"
                                src="{{ asset(listingFile.pathInListSize) }}"
                                alt=""
                        >
                    </div>
                    <div class="text-center">
                        {{ include('admin/listing/_action/_delete_file_form.html.twig') }}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block js %}
    <script src="{{ asset('asset/page/listing/listing-custom-fields.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('asset/lib/leaflet/leaflet.css') }}">
    <script src="{{ asset('asset/lib/leaflet/leaflet.js') }}"></script>
    <link rel="stylesheet" href="{{ asset('asset/lib/leaflet/locate/L.Control.Locate.min.css') }}">
    <script src="{{ asset('asset/lib/leaflet/locate/L.Control.Locate.min.js') }}"></script>

    <script src="{{ asset('asset/page/listing/listing-edit-map.js') }}"></script>
{% endblock %}
