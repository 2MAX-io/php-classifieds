                <div class="sidebar-sticky">

                    <div id="logo" class="sm-text-center mb-3 d-none d-lg-block">
                        <a
                                href="{{ path('app_admin_index') }}"
                                title="{{ 'trans.Classifieds'|trans }}"
                                class="d-block"
                                style="max-width: 215px;"
                        >
                            <img src="{{ asset(settings.logoPath | default('static/system/logo_default.png')) }}" alt="{{ 'trans.Classifieds' | trans }}">
                        </a>
                    </div>

                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" href="{{ path('app_admin_index') }}">
