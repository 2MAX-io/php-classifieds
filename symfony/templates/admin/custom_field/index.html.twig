{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Custom fields' | trans }}{% endblock %}

{% block body %}
<div class="mt-3">
    <div class="row mb-2">
        <div class="col-md-6">
            <h1>{{ 'trans.Custom fields' | trans }}</h1>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="{{ path('app_admin_custom_field_new') }}" class="btn btn-primary">{{ 'trans.Add custom field' | trans }}</a>
        </div>
    </div>

    <table class="table">
        <thead>
        <tr>
            <th>{{ 'trans.Name' | trans }}</th>
            <th>{{ 'trans.Type' | trans }}</th>
            <th>{{ 'trans.Required?' | trans }}</th>
            <th>{{ 'trans.Searchable?' | trans }}</th>
            <th>{{ 'trans.Unit' | trans }}</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        {% for custom_field in custom_fields %}
            <tr>
                <td>{{ custom_field.name }}</td>
                <td>{{ custom_field.type }}</td>
                <td>{{ custom_field.required | boolText | trans }}</td>
                <td>{{ custom_field.searchable | boolText | trans }}</td>
                <td>{{ custom_field.unit }}</td>
                <td>
                    <a href="{{ path('app_admin_custom_field_edit', {'id': custom_field.id}) }}" class="btn btn-dark">
                        {{ 'trans.Edit' | trans }}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
