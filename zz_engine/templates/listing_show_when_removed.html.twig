{% extends 'base.html.twig' %}

{# @var settings \App\Service\Setting\SettingsDto #}
{% set settings = settings() %}

{% block title -%}
    {{- listing.category.parent.name }}
    ⇾
    {{ listing.category.name -}}
{%- endblock %}

{% block body %}

    <div class="container mt-3 mb-3">
        {% if settings.masterSiteLinkShow %}
            <a href="{{ settings.masterSiteUrl }}">{{ settings.masterSiteAnchorText }}</a>
            >
        {% endif %}
        <a href="{{ path('app_index') }}">{{ 'trans.Classifieds' | trans }}</a>

        {% for category in categoryBreadcrumbs %}
            &gt; <a href="{{ path('app_category', {'categorySlug': category.slug}) }}">{{ category.name }}</a>
        {% endfor %}
    </div>

    <div class="container mt-3 listing-show">
        <div class="row">
            <div class="col-md-7">
                {% if isCurrentUserListing(listing) %}
                    <a href="{{ path('app_listing_show', {'id': listing.id, 'slug': listing.slug, 'showPreviewForOwner': 1}) }}" class="btn btn-primary w-100 mb-2">
                        <div>{{- 'trans.Current status' | trans -}}: <span class="{{ getListingStatusClass(listing) }}">{{ getListingStatus(listing) }}</span>.</div>
                        <div>{{- 'trans.Click to preview how listing would look after activation' | trans -}}</div>
                    </a>
                {% endif %}
                <div class="alert alert-danger">
                    {% if listing.status in [constant('\App\\Entity\\Listing::STATUS_PENDING')] %}
                        <h1>{{ 'trans.Listing awaits activation' | trans }}</h1>
                    {% endif %}

                    {% if listing.status in [constant('\App\\Entity\\Listing::STATUS_REJECTED')] %}
                        <h1>{{ 'trans.Listing has been rejected' | trans }}</h1>
                    {% endif %}

                    {% if listing.status in [constant('\App\\Entity\\Listing::STATUS_DEACTIVATED')] %}
                        <h1>{{ 'trans.Deactivated by user' | trans }}</h1>
                    {% endif %}

                    {% if listing.status in [constant('\App\\Entity\\Listing::STATUS_ADMIN_REMOVED'), constant('\App\\Entity\\Listing::STATUS_USER_REMOVED')] %}
                        <h1>{{ 'trans.Listing has been deleted' | trans }}</h1>
                    {% endif %}
                    <div>
                        {{ 'trans.See other active listings in category' | trans }}:
                        <a href="{{ path('app_category', {'categorySlug': listing.category.slug}) }}">
                            {{ listing.category.parent.name }}
                            ⇾
                            {{ listing.category.name }}
                        </a>
                    </div>
                </div>

                <div class="mb-2 d-none d-md-block">
                    {{ 'trans.Listing identifier' | trans }}: {{ listing.id }}

                    <div class="float-md-right">
                        {{ 'trans.Views' | trans }}: {{ listingShowDto.viewsCount+1 | thousandsSeparate }}
                    </div>
                </div>
            </div>

            <!-- sidebar -->
            <div class="col-md-5">
                {% if isCurrentUserListing(listing) %}
                    <a href="{{ path('app_listing_edit', {'id': listing.id}) }}" class="btn btn-primary mb-2">
                        {{ 'trans.Edit listing' | trans }}
                    </a>
                {% endif %}

                {% if lowSecurityCheckIsAdminInPublic() %}
                    <a
                            href="{{ path('app_admin_listing_edit', {'id': listing.id}) }}"
                            class="btn btn-outline-danger mb-2"
                    >
                        {{ 'trans.Edit listing as Admin' | trans }}
                    </a>
                {% endif %}

                {% if userOrAdmin(listing) %}
                    <span class="{{ getListingStatusClass(listing) }}">{{ getListingStatus(listing) }}</span>
                {% endif %}

                {% if listing.price is not empty %}
                    <div>
                        <div class="my-1">
                            <h3 class="btn btn-dark price btn-lg">
                                {{ 'trans.Price' | trans }}: {{ listing.price }}
                            </h3>

                            {% if listing.priceFor %}<span>{{ ('trans.priceFor.'~listing.priceFor) | trans }}</span>{% endif %}

                            {% if listing.priceNegotiable is not null %}
                                {% if listing.priceNegotiable %}
                                    <span class="badge badge-success">{{ 'trans.negotiable' | trans }}</span>
                                {% else %}
                                    <span class="badge badge-danger">{{ 'trans.NOT negotiable' | trans }}</span>
                                {% endif %}
                            {% endif %}
                        </div>
                    </div>
                {% endif %}

                <!-- info -->
                <div class="card mb-3 w-100">
                    <h5 class="card-header">{{ 'trans.Informations' | trans }}</h5>

                    <div class="card-body">
                        <div class="mb-2 py-2">
                            <div class="row">
                                <div class="col-sm-4">{{ 'trans.Date added' | trans }}</div>

                                <div class="col-sm-8">
                                    {{ listing.orderByDate | date }}
                                </div>
                            </div>
                        </div>

                        <div class="mb-2 py-2">
                            <div class="row">
                                <div class="col-sm-4">{{ 'trans.Expiration date' | trans }}</div>

                                <div class="col-sm-8">
                                    {{ listing.validUntilDate | date }}
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

            </div>
        </div>
    </div>
{% endblock body %}
