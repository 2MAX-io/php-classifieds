{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Featured packages' | trans }}{% endblock %}

{% block body %}
<div class="mt-3">
    <div class="row no-gutters mb-2">
        <div class="col-md-6">
            <h1>{{ 'trans.Featured packages' | trans }}</h1>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="{{ path('app_admin_featured_package_new') }}" class="btn btn-primary">
                {{- 'trans.Create new' | trans -}}
            </a>
        </div>
    </div>

    <table class="table table-responsive-sm">
        <thead>
            <tr>
                <th>{{ 'trans.Name' | trans }}</th>
                <th>{{ 'trans.Price' | trans }}</th>
                <th>{{ 'trans.Days of featured' | trans }}</th>
                <th>{{ 'trans.Days of expiration' | trans }}</th>
                <th>{{ 'trans.Default?' | trans }}</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for featuredPackage in featuredPackages %}
            <tr>
                <td>
                    <div class="text-break">{{ featuredPackage.name }}</div>
                    <div class="text-muted text-break">{{ featuredPackage.adminName }}</div>
                </td>
                <td>{{ featuredPackage.price | moneyPrecise }}</td>
                <td>{{ featuredPackage.daysFeaturedExpire }}</td>
                <td>{{ featuredPackage.daysListingExpire }}</td>
                <td>
                    <span class="{{ featuredPackage.defaultPackage | boolGreenRedClass }}">
                        {{- featuredPackage.defaultPackage | boolText | trans -}}
                    </span>
                </td>
                <td>
                    <a href="{{ path('app_admin_featured_package_edit', {'id': featuredPackage.id}) }}" class="btn btn-dark">
                        {{- 'trans.edit' | trans -}}
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">{{ 'trans.no records found' | trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
