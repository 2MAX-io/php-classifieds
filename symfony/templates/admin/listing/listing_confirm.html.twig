{% extends 'admin/base.html.twig' %}

{% block title %}Admin index{% endblock %}

{% block body %}
    <div class="container mt-5">
        <table class="table">
            <thead>
            <tr>
                <th>{{ 'trans.Title' | trans }}</th>
                <th>{{ 'trans.Last edit' | trans }}</th>
                <th>{{ 'trans.Actions' | trans }}</th>
            </tr>
            </thead>
            <tbody>
            {% for listing in listings %}
                <tr>
                    <td>
                        <div>
                            <a href="{{ path('app_listing_show', {"id": listing.id, 'slug': listing.slug}) }}">{{ listing.title }}</a>
                        </div>
                    </td>
                    <td>{{ listing.lastEditDate | date }}</td>
                    <td>
                        <a href="{{ path('app_admin_listing_edit', {'id': listing.id}) }}" class="btn btn-dark">{{ 'trans.Edit' | trans }}</a>

                        {{ include('admin/listing/_confirm_form.html.twig') }}

                        <a href="{{ path('app_admin_listing_reject', {'id': listing.id}) }}" target="_blank" class="btn btn-warning">{{ 'trans.Reject' | trans }}</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8">{{ 'trans.no records found' | trans }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if pager.getNbPages > 1 %}
            {{ pagination | raw }}
        {% endif %}
    </div>
{% endblock %}
