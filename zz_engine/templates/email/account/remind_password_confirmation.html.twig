{# @var user \App\Entity\User #}

<p>
    {{ 'trans.If you did not requested password reset, ignore this email, and do NOT click link bellow' | trans }}.
</p>

<p>
    {{ 'trans.If you have requested password reset for account:' | trans }}
</p>

<pre>{{- user.username -}}</pre>

<p>
    {{ 'trans.click link bellow to confirm' | trans }}
</p>

<p>
    {{ 'trans.When you confirm password reset, your password would be set to' | trans }}:
</p>

<pre>{{- plainPassword -}}</pre>

<div>
    {% set confirmResetUrl = url('app_remind_password_confirm', {'token': token, 'username': user.username}) %}
    <a href="{{ confirmResetUrl }}">{{ 'trans.I confirm password reset' | trans }}</a>

    <p>
        {{ 'trans.If the link above does not work, try to copy the link below to your browser' | trans }}:
    </p>

    <pre>{{ confirmResetUrl }}</pre>
</div>
