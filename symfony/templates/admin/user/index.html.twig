{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}

    <div class="container mt-5">
        <h1>User index</h1>

        <table class="table">
            <thead>
            <tr>
                <th>{{ 'trans.Email' | trans }}</th>
                <th>{{ 'trans.Enabled' | trans }}</th>
                <th>{{ 'trans.Registration date' | trans }}</th>
                <th>{{ 'trans.Last login' | trans }}</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.email }} {{ user.username }}</td>
                    <td>{{ (user.enabled ? 'trans.Yes' : 'trans.No') | trans }}</td>
                    <td>{{ user.registrationDate ? user.registrationDate|date : '' }}</td>
                    <td>{{ user.lastLogin ? user.lastLogin|date : '' }}</td>
                    <td>
                        <a href="{{ path('admin_user_show', {'id': user.id}) }}">show</a>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="999">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        {% if pager.haveToPaginate %}
            {{ pagination | raw }}
        {% endif %}
    </div>
{% endblock %}
