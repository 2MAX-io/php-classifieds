{% extends 'admin/base.html.twig' %}

{% block title %}{{ 'trans.Edit custom field' | trans }}{% endblock %}

{% block body %}
<div class="container mt-3">
    <div class="row mb-2">
        <div class="col-md-6">
            <h1>{{ 'trans.Edit custom field' | trans }}</h1>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="{{ path('app_admin_custom_field_index') }}">{{ 'trans.back to list' | trans }}</a>
            {{ include('admin/custom_field/_delete_form.html.twig') }}
        </div>
    </div>

    {{ include('admin/custom_field/_form.html.twig', {'button_label': 'trans.Update' | trans}) }}
</div>

<div class="container mt-3">
    <div class="row mb-2">
        <div class="col-md-6">
            <h1>{{ 'trans.Options' | trans }}</h1>
        </div>
        <div class="col-md-6 text-md-right">
            <a href="{{ path('app_admin_custom_field_add_option', {id: custom_field.id}) }}" class="btn btn-success">{{ 'trans.Add option' | trans }}</a>
        </div>
    </div>

    {% for customFieldOption in custom_field.customFieldOptions %}
        <div>
            {{ customFieldOption.name }}

            <a href="{{ path('app_admin_custom_field_edit_option', {'id': customFieldOption.id}) }}" class="btn btn-dark">{{ 'trans.Edit' | trans }}</a>
        </div>
    {% endfor %}
</div>
{% endblock %}
